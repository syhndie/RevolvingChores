@page
@model ChangeEmailModel
@{
    ViewData["Title"] = "Change email";
    ViewData["ActivePage"] = ManageNavPages.ChangeEmail;
}

<h2 class="text-center">Change email address</h2>

<form id="profile-form" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <button id="update-profile-button" type="submit" class="btn btn-primary btn-block">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}