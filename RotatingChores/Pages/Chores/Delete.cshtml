@page
@model RotatingChores.Pages.Chores.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<h2>Delete Chore</h2>
<div>
    <a asp-page="Index">Back to list</a>
</div>
<hr />
<div class="row m-0">
    <div class="col-12 p-0">
        <form method="post">
            <div class="form-group">
                <label class="control-label">Are you sure you want to delete '@Model.Chore.Name' chore?</label>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Chore.ID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
            </div>
        </form>
    </div>
</div>