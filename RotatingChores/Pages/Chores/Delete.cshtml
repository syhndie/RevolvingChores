@page
@model RotatingChores.Pages.Chores.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h2>Delete Chore</h2>
    <a asp-page="Index">All chores</a>

    <hr />
    <div class="row m-0">
        <div class="col-12 p-0">
            <form method="post">
                <div class="form-group">
                    <label class="control-label">Are you sure you want to delete '@Model.Chore.Name' chore?</label>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Chore.ID" />
                    <input type="submit" value="Delete" class="btn btn-danger btn-block delete-btn" /> 
                </div>
            </form>
        </div>
    </div>
</div>