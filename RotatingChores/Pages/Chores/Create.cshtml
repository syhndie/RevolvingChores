@page
@model RotatingChores.Pages.Chores.CreateModel
@using RotatingChores.Helpers;

@{

    ViewData["Title"] = "Create New Chore";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div id="form-container" class="col-xl-4 col-lg-6 col-sm-8 col-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Chore.Name" class="control-label"></label>
                <input asp-for="Chore.Name" class="form-control" />
                <span asp-validation-for="Chore.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chore.DateLastCompleted" class="control-label"></label>
                <input id="date" type="text" asp-for="Chore.DateLastCompleted" class="form-control" />
                <span asp-validation-for="Chore.DateLastCompleted" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-12">
                    <label asp-for="Chore.FrequencyValue" class="control-label"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <input type="text" placeholder="number" asp-for="Chore.FrequencyValue" class="form-control" />
                    <span asp-validation-for="Chore.FrequencyValue" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <select asp-for="Chore.FrequencyUnits" asp-items="Html.GetEnumSelectList<TimeIntervals>()" class="form-control">
                        <option selected="selected" value="" disabled>units</option>
</select>
                    <span asp-validation-for="Chore.FrequencyUnits" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Chore.Notes" class="control-label"></label>
                <textarea rows="2" asp-for="Chore.Notes" class="form-control"> </textarea>
                <span asp-validation-for="Chore.Notes" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Chore.IsHighPriority" /> @Html.DisplayNameFor(model => model.Chore.IsHighPriority)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            $("#date").datepicker({
                orientation: "bottom"
            });
        });
    </script>
}