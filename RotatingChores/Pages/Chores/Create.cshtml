            </div>
            <div class="form-group">
                <label asp-for="Chore.Notes" class="control-label"></label>
                <input asp-for="Chore.Notes" class="form-control" />
                <span asp-validation-for="Chore.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
