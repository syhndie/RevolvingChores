@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Chore</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Chore.UserID" class="control-label"></label>
                <input asp-for="Chore.UserID" class="form-control" />
                <span asp-validation-for="Chore.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chore.Name" class="control-label"></label>
                <input asp-for="Chore.Name" class="form-control" />
                <span asp-validation-for="Chore.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chore.DateLastCompleted" class="control-label"></label>
                <input asp-for="Chore.DateLastCompleted" class="form-control" />
                <span asp-validation-for="Chore.DateLastCompleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chore.FrequencyValue" class="control-label"></label>
                <input asp-for="Chore.FrequencyValue" class="form-control" />
