@using RotatingChores.Helpers
@model RotatingChores.Models.Chore


<div class="row m-0">
    <div class="col-12 p-0">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-12">
                    <label asp-for="FrequencyValue" class="control-label"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <input type="text" placeholder="number" asp-for="FrequencyValue" class="form-control" />
                    <span asp-validation-for="FrequencyValue" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <select asp-for="FrequencyUnits" asp-items="Html.GetEnumSelectList<TimeIntervals>()" class="form-control">
                        <option selected="selected" value="" disabled>units</option>
                    </select>
                    <span asp-validation-for="FrequencyUnits" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="DueDate" class="control-label"></label>
                    <input id="date" type="text" asp-for="DueDate" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
                @{
                    string highPriorityButtonTitle = "Not High-Priority";
                    string highPriorityIcon = "far fa-star fa-1.5x";
                    if (Model.IsHighPriority)
                    {
                        highPriorityButtonTitle = "Is High-Priority";
                        highPriorityIcon = "fas fa-star fa-2x";
                    }
                }
               <div class="form-group col-6">
                   <label asp-for="IsHighPriority" class="control-label"></label><br />
                   <div class="btn-group-toggle">
                       <label id="example-checkbox-containing-label" class="btn btn-light">
                           <input asp-for="IsHighPriority" id="example-checkbox" type="checkbox"/>
                           <i id="priority-icon" title="@highPriorityButtonTitle" aria-label="@highPriorityButtonTitle" class="@highPriorityIcon"></i>
                       </label>                 
                   </div>
                   <span asp-validation-for="IsHighPriority" class="text-danger"></span>
               </div>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea rows="1" asp-for="Notes" class="form-control"> </textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
    
</div>