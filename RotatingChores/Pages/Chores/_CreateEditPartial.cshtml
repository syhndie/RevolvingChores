@using RotatingChores.Helpers
@model RotatingChores.Models.Chore


<div class="row m-0">
    <div class="col-12 p-0">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateLastCompleted" class="control-label"></label>
                <input id="date" type="text" asp-for="DateLastCompleted" class="form-control" />
                <span asp-validation-for="DateLastCompleted" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-12">
                    <label asp-for="FrequencyValue" class="control-label"></label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <input type="text" placeholder="number" asp-for="FrequencyValue" class="form-control" />
                    <span asp-validation-for="FrequencyValue" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <select asp-for="FrequencyUnits" asp-items="Html.GetEnumSelectList<TimeIntervals>()" class="form-control">
                        <option selected="selected" value="" disabled>units</option>
                    </select>
                    <span asp-validation-for="FrequencyUnits" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea rows="2" asp-for="Notes" class="form-control"> </textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHighPriority" /> @Html.DisplayNameFor(model => model.IsHighPriority)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    
</div>
<hr />
<div>
    <a asp-page="Index">Back to list</a>
</div>